<style>
  .banner {
    width: 100vw;
    left: 0;
    right: 0;
    background: var(--tn-accent, #a9b1d6);
    color: var(--tn-white, #24283b);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1.0rem;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
